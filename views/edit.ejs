<%- include("./partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= note.title %></div>
    <form class="ui form" action="/notes/<%= note._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="note[title]" value="<%= note.title %>">
        </div>
        <div class="field">
            <label>Message</label>
            <textarea name="note[message]"><%= note.message %></textarea>
        </div>
        <input class="ui inverted violet button" type="submit">
    </form>
</div>

<%- include("./partials/footer") %>