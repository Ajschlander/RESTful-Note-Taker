<%- include("./partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= note.title %></div>
    <div class="ui top attached">
        <div class="item">
            <div class="content">
                <span><%= note.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- note.message %></p>
            </div>
            <a class="ui orange basic button" href="/notes/<%= note._id %>/edit">Edit</a>
            <form id="delete" action="/notes/<%= note._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>